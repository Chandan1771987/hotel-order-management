

<%= link_to 'New Order Delivery Info', new_order_delivery_info_path %>

<table class="ui celled aligned table">
  <tr>
    <th>Order ID</th>
    <th>Delivery Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.order_id %></td>
      <td><%= item.status %></td>
      <td><%= link_to 'Show', order_delivery_info_path(item) %></td>
      <td><%= link_to 'Edit', edit_order_delivery_info_path(item) %></td>
      <td><%= link_to 'Destroy', order_delivery_info_path(item),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @items%>
