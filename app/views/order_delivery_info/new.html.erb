<h1>New Order Delivery Info</h1>

<%= form_with scope: :order_delivery_info, class: "ui form", url: order_delivery_infos_path, local: true do |form| %>
  <p>
    <%= form.label :order_id %><br>
    <%= form.text_field :order_id %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', order_delivery_infos_path %>