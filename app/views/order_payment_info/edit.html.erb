<h1>Edit Payment Info</h1>

<%= form_with(model: @item, class: "ui form page center grid", local: true) do |form| %>


  <p>
    <%= form.label :order_id %><br>
    <%= form.text_field :order_id %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </p>

  <p>
    <%= form.label :payment_type %><br>
    <%= form.text_field :payment_type %>
  </p>

  <p>
    <%= form.label :transaction_id %><br>
    <%= form.text_field :transaction_id %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

